 <style>
    .table {
    margin-left: 7%;
    margin-right: 7%;
    width:86%;
    background-color: white;
    border-width: 1cm;
    border-collapse: separate;
    }
    .table thead th {
        font-size: 1.5rem;
    }
    .table td {
        font-size: 1.2rem;
    }
    .table tbody th {
        font-size: 1.32rem;
    }
    .main {

    }
    .container {
        width: 100%;
        max-width: 2500px;
        margin-left: 0px;
        margin-right: 0px;
    }
    .container.container-fluid {
        width: 100%;
